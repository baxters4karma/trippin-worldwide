<div class="home">
	<h4 class="sub-heading">Trip Blogs</h4>
	<ol class="post-list">
		{{#each posts as |post|}}
			<li>
				<article class="post">
					<div class="post-card">
						<h5 class="blog-title">{{title}}</h5>
						<span class="list-item"><strong>Posted by:</strong>
							{{user.first_name}}
							{{user.last_name}}</span>
						<span class="list-item"><strong>Description:</strong>
							{{description}}</span>
						<span class="list-item"><strong>Location: </strong>
							{{#each locations}}
								{{city}},								
								{{country}}
							{{/each}}
						</span>
						<span class="list-item"><strong>Date:
							</strong>{{format_date end_date}}</span>
            <span class="list-item">
						  <a href="/post/{{id}}">More Details</a>
            </span>
					</div>
				</article>
			</li>
		{{/each}}
	</ol>
</div>