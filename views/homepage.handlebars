<head>
	<script
		src="https://polyfill.io/v3/polyfill.min.js?features=default"
	></script>
	<script src="./javascript/location.js"></script>
</head>
<div class="home">
	<h4 class="sub-heading">Trip Blogs</h4>
	<div id="map"></div>
	<ol class="post-list">
		{{#each posts as |post|}}
			<li>
				<article class="post">
					<div class="post-card">
						<h5 class="blog-title">{{title}}</h5>
						<span class="list-item"><strong>Posted by:</strong>
							{{user.first_name}}
							{{user.last_name}}</span>
						<span class="list-item"><strong>Description:</strong>
							{{description}}</span>
						<span class="list-item"><strong>Location: </strong>
							{{#each locations}}
								{{city}},
								{{city}},
								{{city}},
								{{country}}
							{{/each}}
						</span>
						{{! let's consider displaying the information below only on the 'single blog post' page }}
						{{#if activities}}
							<span class="list-item"><strong>Activities: </strong>
								{{#each activities}}
									{{name}}
								{{/each}}
							</span>
						{{/if}}
						{{#if cuisine}}
							<span class="list-item"><strong>Cuisine: </strong>
								{{#each cuisine}}
									{{name}}
								{{/each}}
							</span>
						{{/if}}
						<span class="list-item"><strong>Start Date:
							</strong>{{start_date}}</span>
						<span class="list-item"><strong>End Date:
							</strong>{{end_date}}</span>
						<a href="/post/{{id}}">More Details</a>
					</div>
				</article>
			</li>
		{{/each}}
	</ol>

	<!-- Async script executes immediately and must be after any DOM elements used in callback. -->
	<script
		src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAR4BrHtt6FMtMUXzvCiTuVPiDyg0rTvCQ&callback=initMap&v=weekly"
		async
	></script>
</div>