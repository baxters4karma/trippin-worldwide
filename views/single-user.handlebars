<div class="user-home">

  <article class="post">
    <h5 class="blog-title">{{user.first_name}} {{user.last_name}}'s Posts</h5>
    <div class="post-card">
{{#if user.posts}}
{{#each user.posts}}
<li class="list-item">
  <a href="/post/{{id}}">{{title}}</a> | {{format_date created_at}}
</li>
{{/each}}
{{else}}
<li class="list-item ">
  <a href="/users">No Posts!</a>
</li>
{{/if}}
    </div>
  </article>


<div class="comments">
 <h5 class="link-title">{{user.first_name}} {{user.last_name}}'s Comments</h5>
  <section> 
  {{#if user.comments}}
  {{#each user.comments}}
    <li class="comment">
    {{comment_text}} -
      <a href="/post/{{post.id}}">{{post.title}}</a></br>
      <sub>comment posted on: {{format_date created_at}}</sub>
    </li>
  {{/each}}
  {{else}}
    <li class="list-item">
    <a href="/users">No Comments!</a>
    </li>
  {{/if}}
  </section>
</div>

</div>