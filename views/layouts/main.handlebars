<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trippin Worldwide</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./stylesheets/style.css" />
  </head>
  <header>
    <h2>Trippin Worldwide</h2>
  </header>
  <div class="top-nav">
       {{#if loggedIn}}
    <button id="logout" class="btn-nav">Log Out</button>
    {{else}}
    <a class="btn-nav" href="/login">Log In</a>
    <a class="btn-nav" href="/signup">Sign Up</a>
    {{/if}}
  </div>
  <body class="hero-image">
    <container class="page">
      <div class="row">
        <nav class="sidebar col-12 col-sm-2 col-xl-1">
          <a class="nav-choice" href="/">Recent</a>
          {{!-- the 'Recent' nav button will act as 'homepage' --}}
          <a class="nav-choice" href="/location">Locations</a>
          <a class="nav-choice" href="/users">Users</a>
          <a class="nav-choice" href="/popular">Popular</a>
          <a class="nav-choice" href="/activities">Activities</a>
          <a class="nav-choice" href="/food">Food</a>
          <a class="nav-choice" href="/photos">Photos</a>
        </nav>
        <main class="col-12 col-sm-10 col-xl-11">
         {{{body}}}
        </main>
      </div>
    </container>
    {{#if loggedIn}}
    <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>
  <footer>Thanks for visiting!</footer>
</html>